#!/usr/bin/env ruby
$LOAD_PATH << File.dirname(__FILE__) + '/../lib' unless $LOAD_PATH.include?(File.dirname(__FILE__) + '/../lib/')

require 'twslacker'

twslacker = Twslacker::Base.new
case ARGV[0]
when "start"
  twslacker.run
when "stop"
  twslacker.shutdown
else
  puts "(start|stop)"
  Kernel.exit(1)
end